<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.dailyquote.view_utils.CustomTextView
        android:id="@+id/add_quote_header"
        app:layout_widthPercent = "80%"
        app:layout_heightPercent = "20%"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        app:layout_marginLeftPercent = "10%"
        app:layout_marginStartPercent = "10%"
        app:layout_marginTopPercent = "12%"

        android:text="Enter your favourite quote here:"
        android:textColor="@color/black"
        android:gravity="center" />

    <EditText
        android:id="@+id/et_add_quote"
        app:layout_widthPercent = "80%"
        app:layout_heightPercent = "40%"
        android:layout_below = "@id/add_quote_header"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        app:layout_marginLeftPercent = "10%"
        app:layout_marginTopPercent = "6%"

        android:inputType="textMultiLine"
        android:minLines="1"
        android:maxLines="5"
        android:gravity="top|start"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/btn_upload_quote"
        android:background = "@drawable/custombutton"
        app:layout_widthPercent = "80%"
        app:layout_heightPercent = "15%"

        android:layout_below="@+id/et_add_quote"
        android:layout_alignParentBottom="true"
        android:gravity="center"

        app:layout_marginLeftPercent = "10%"
        app:layout_marginTopPercent = "5%"
        app:layout_marginBottomPercent = "5%"
        android:text="SEND"
        android:textColor="@color/white"
        />
</android.support.percent.PercentRelativeLayout>